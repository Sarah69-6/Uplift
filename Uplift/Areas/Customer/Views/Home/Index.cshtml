@model Uplift.Models.ViewModels.HomeViewModel

<section class="page-section" id="services">
    <div class="container" id="serviceContainer">
        <div class="text-center">
            <h2 class="section-heading text-uppercase">Services</h2>
            <br />
            <h3 class="section-subheading text-muted">The perfect services to get your garden looking great!</h3>
            <br />
        </div>
        <div class="row text-center">
            <div class="col-md-4">
                <span><i class="fa fa-money" style="font-size:48px;color:green"></i></span>
                <h4 class="my-3">Save Money</h4>
                <p class="text-muted">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Minima maxime quam architecto quo inventore harum ex magni, dicta impedit.</p>
            </div>
            <div class="col-md-4">
                <span><i class="fa fa-clock" style="font-size:48px;color:green"></i></span>
                <h4 class="my-3">Save Time</h4>
                <p class="text-muted">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Minima maxime quam architecto quo inventore harum ex magni, dicta impedit.</p>
            </div>
            <div class="col-md-4">
                <span><i class="fa fa-search" style="font-size:48px;color:green"></i></span>
                <h4 class="my-3">Save time searching</h4>
                <p class="text-muted">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Minima maxime quam architecto quo inventore harum ex magni, dicta impedit.</p>
            </div>
        </div>
    </div>
</section>
@foreach (var category in Model.CategoryList)
{
    @if (Model.ServiceList.Where(c => c.CategoryId == category.Id).Count() > 0)
    {
        <div class="row container pb-3 backgroundWhite">
            <div class="col-12">
                <div class="row">
                    <h2 class="text-white"><b>@category.Name</b></h2>

                    <div class="col-12">
                        <div class="row my-3">
                            @foreach (var service in Model.ServiceList.Where(c => c.CategoryId == category.Id))
                            {
                                <div class="col-lg-4 col-xl-3 col-md-6 pb-4">
                                    <div class="card" style="border: 2px solid #43ac6a; border-radius: 5px; background:url('images/services/pexels-photo-751378.jpeg')">
                                        <div class="pl-3 pt-1 text-center">
                                            <h3 class="card-title text-primary"><b>@service.Name</b></h3>
                                        </div>
                                        <div class="d-flex justify-content-between ">
                                            <div class="pl-1 text-muted">Price per service</div>
                                            <div class="pr-1 text-danger h5">£@service.Price</div>
                                        </div>
                                        <img src="@service.ImageUrl" class="card-img-top p-2 rounded" />

                                        <div class="text-dark text-center pb-2">@service.Frequency.Name</div>
                                        <a asp-action="Details" class="btn btn-success" style="border-radius:2px;" asp-route-id="@service.Id">Details</a>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

    }
}
